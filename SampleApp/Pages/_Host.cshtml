@page "/"
@namespace SampleApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>SampleApp</title>
    <base href="~/"/>
    
    @* <link rel="stylesheet" href="_content/UISet.FontSet/Inter.css"/> *@
    @* <link rel="stylesheet" href="_content/UISet.FontSet/JetBrainsMono.css"/> *@
    
    <style>
        #blazor-error-ui {
            display: none;
        }
    </style>
</head>
<body>

<div id="blazor-error-ui">
    <div class="Background"></div>
    <div class="Content">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <div class="Buttons">
            <button class="SS_Button dismiss">DISMISS</button>
            <button href="" class="SS_Button--Blue reload">RELOAD</button>
        </div>
    </div>
</div>

<app>
    <component type="typeof(App)" render-mode="ServerPrerendered"/>
</app>

<script src="_framework/blazor.server.js"></script>
</body>
</html>